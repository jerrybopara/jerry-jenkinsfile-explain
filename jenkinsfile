pipeline {
    agent any
    
    stages {
        stage("Build") {
            
            steps {
                echo 'building an application...'
                sh 'docker images'
                
            } // end of steps 
        } // end of stage

        stage("Test"){
            
            steps {
                echo "testing the application..."
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying the application..."
            }

        }


    } // end of stages
} // end of pipeline

