pipeline {
    agent any
    
    stages {
        stage("Test") {
            
            steps {
                echo 'testing the application...'
            }
        }

        stage("Build") {
            
            steps {
                echo 'building an application...'
                                
            } 
        } 

        stage("Deploy") {
            steps {
                echo 'Deploying the application...'
            }

        }


    } // end of stages
} // end of pipeline

